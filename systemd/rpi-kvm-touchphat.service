[Unit]
Description=RPi KVM Touch pHAT Service
After=rpi-kvm-core.service
Requires=rpi-kvm-core.service

[Service]
Environment="LOG_LEVEL=INFO"
Type=simple
ExecStart=/usr/bin/python3 __INSTALL_DIR__/rpi_kvm/touch_phat.py
Restart=always
RestartSec=10
User=root
Group=root
WorkingDirectory=__INSTALL_DIR__

[Install]
WantedBy=rpi-kvm.target